<h3>Form to add subjects Assignments</h3>

<div class="container">

  <%= form_for :assignment, url: lecturer_subject_assignments_path(lecturer_subject_id: @lecturer_subject.id),html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :Title%>
      <%= f.text_field :title, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :Attachment%>
      <%= f.file_field :attachment%>
    </div>

    <%= f.submit "Post Assignments", class: "btn btn-info"%>

  <% end %>
</div>
