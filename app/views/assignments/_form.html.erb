<%= form_for :assignment, url: subject_assignments_path(lecturer_subject_subject_id), html: { multipart: true } do |f| %>
  <div class="well", style="width:50%; height: 400px; margin: 0 auto; text-align:center; margin-top:100px;" >
    <div class="form-group", style="width:50%; height: 300px; margin: 0 auto; text-align:center; margin-top:10px;">
      <h3 class="head", style="margin-top:10px;">Add Assignment</h3>
      <%= f.label :Title, style:"float:left; font-size: 16px; font-family: san-serif" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Assignment Title", style:"width:100%; height:40px;"%>
      <div class="form-group">
        <%= f.label :Attachment , style:"float:left; margin-top:20px; font-size: 16px; font-family: san-serif"%>
        <%= f.file_field :attachment, style:"height:30px;"%>
      </div class="form-group">
        <%= f.label :Due_Date, style:"float:left; margin-top:20px; font-size: 16px; font-family: san-serif"%>
        <%= f.text_field :submission_end_date, class: "datepicker form-control", placeholder: "#{Time.now.strftime("%d/%m/%Y")}"%>
      <div>
      </div>
      <div class="subject-button" style="margin-top: 25px;">
        <%= f.submit "Post Assignments", class: "btn btn-info"%>
      </div>
    </div>
  </div>
<% end %>
