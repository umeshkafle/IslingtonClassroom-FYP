<h3>Form to add subjects Materials</h3>

<div class="container">

  <%= form_for :material, url: subject_materials_path(@subject),html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :Title%>
      <%= f.text_field :title, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :Attachment%>
      <%= f.file_field :attachment%>
    </div>

    <%= f.submit "Post Materials", class: "btn btn-info"%>

  <% end %>
</div>
